<?xml version="1.0"?>
<config>
    <sections>
        <dev>
            <groups>
                <debug>
                    <fields>
                        <admin_templatehints>
                            <label>Enable template hints in admin view?</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </admin_templatehints>

                        <admin_templatehints_blocks>
                            <label>Add Block Names to Hints in admin view?</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>110</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>enable admin template hints to use</comment>
                        </admin_templatehints_blocks>
                    </fields>
                </debug>
            </groups>
        </dev>
    </sections>
</config>
